{
  "scopeName": "source.pz-script",
  "patterns": [
    {
      "name": "entity.name.recipe.pz",
      "match": "^\\s*(\\w+)\\s+([\\w !*.:]*)(?:\\s*{?$)",
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.class"
        }
      }
    },
    {
      "name": "string.quoted.double.pz",
      "match": "\\b[a-zA-Z][\\w]*[.-\/-][\\w.-\/-]+\\b"
    },
    {
      "name": "entity.name.property.pz",
      "match": "([\\w.!]*)(?:\\s*([=])\\s*)",
      "captures": {
        "1": { "name": "variable.parameter" },
        "2": { "name": "keyword.operator.assignment" }
      }
    },
    {
      "name": "entity.name.inputs.pz",
      "match": "\\b(item)(?:\\s+(\\d+))\\b",
      "captures": {
        "1": {
          "name": "variable.parameter"
        },
        "2": {
          "name": "constant.numeric.pz"
        }
      }
    },
    {
      "name": "comment.block.pz",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "invalid.illegal.comment.double-slash.pz",
      "match": "(?://|--).*"
    },
    {
      "name": "constant.language.boolean.pz",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "string.quoted.double.pz",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "constant.numeric.pz",
      "match": "(?:\\b[+-]*\\d+(?:\\.\\d*)?|\\.\\d+)\\b"
    },
    {
      "name": "keyword.operator.assignment.pz",
      "match": "[=:,;.]"
    }
  ]
}
